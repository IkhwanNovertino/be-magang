<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Peserta Magang</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/intern">peserta magang</a></li>
            <li class="breadcrumb-item active">Detail peserta magang</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Data Peserta Magang</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form>
              <div class="card-body">
                <div class="form-group row">
                  <label for="name" class="col-sm-4 col-form-label">Nama Lengkap</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="name" 
                      value="<%= intern.name %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="nim" class="col-sm-4 col-form-label">No. Induk Siswa/Mahasiswa</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="nim" 
                      value="<%= intern.id_num %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="institute" class="col-sm-4 col-form-label">Sekolah/Kampus/Instansi</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="institute" 
                      value="<%= intern.institute %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="major" class="col-sm-4 col-form-label">Jurusan</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="major" 
                      value="<%= intern.major %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="levels" class="col-sm-4 col-form-label">Kategori Peserta</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="levels"
                      <% if (intern.levels === 'slta') { %>
                        value="SLTA/SMK/SMA"
                      <% } else if (intern.levels === 'college') { %>
                        value="Perguruan Tinggi"
                      <% } else { %>
                        value="Pegawai"
                      <% } %>
                    >
                  </div>
                </div>
                <hr>
                <div class="form-group row">
                  <label for="email" class="col-sm-4 col-form-label">Tanggal Mulai Magang</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= intern.start_an_internship %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-4 col-form-label">Tanggal Selesai Magang</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= intern.end_an_internship %>"
                    >
                  </div>
                </div>
                <hr>
                <div class="form-group row">
                  <label for="email" class="col-sm-4 col-form-label">Email</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= intern.email %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-4 col-form-label">No. Telpon</label>
                  <div class="col-sm-8">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= intern.phone_num === 1 ? `nomor telpon belum dimasukkan` : `+62-${intern.phone_num}` %>"
                    >
                  </div>
                </div>
                <hr>
                <div class="form-group row">
                  <label for="email" class="col-sm-4 col-form-label">Data Pengajuan Magang</label>
                  <div class="col-sm-8">
                    <a href="/submission/detail/<%= intern.submissionID %>" class="btn btn-default mr-1">
                      Lihat data pengajuan magang
                    </a>
                  </div>
                </div>
                <div class="form-group mt-5 pt-5">
                  <% if (intern.avatar === 'none') { %>
                    <img class="img-fluid img-circle img-lg" src="http://localhost:5000/images/person-circle.svg" alt="foto profil">
                  <% } else { %>
                    <img class="img-fluid img-circle img-lg" src='http://localhost:5000/uploads/<%= intern.avatar %>' alt="Foto">
                  <% } %>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/intern" class="btn btn-default mr-1">
                  Kembali
                </a>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>