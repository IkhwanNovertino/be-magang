<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Pembimbing</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/supervisor">Pembimbing</a></li>
            <li class="breadcrumb-item active">Detail pembimbing</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Data Pembimbing</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form>
              <div class="card-body">
                <div class="form-group row">
                  <label for="name" class="col-sm-2 col-form-label">Nama Lengkap</label>
                  <div class="col-sm-10">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="name" 
                      value="<%= supervisor.name.toUpperCase() %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="nip" class="col-sm-2 col-form-label">No. Induk Pegawai</label>
                  <div class="col-sm-10">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="nip" 
                      value="<%= supervisor.nip %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="job_title" class="col-sm-2 col-form-label">Jabatan</label>
                  <div class="col-sm-10">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="job_title" 
                      value="<%= supervisor.job_title.toUpperCase() %>"
                    >
                  </div>
                </div>
                <hr>
                <div class="form-group row">
                  <label for="email" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= supervisor.email || 'email belum ada' %>"
                    >
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-2 col-form-label">No. Telpon</label>
                  <div class="col-sm-10">
                    <input 
                      type="text" 
                      readonly 
                      class="form-control-plaintext border-bottom" 
                      id="email" 
                      value="<%= !supervisor.phone_num ? `nomor telpon belum dimasukkan` : `+62-${supervisor.phone_num}` %>"
                    >
                  </div>
                </div>
                <hr>
                <div class="form-group">
                  <% if (supervisor.avatar === 'none') { %>
                    <img class="img-fluid img-circle img-lg" src="http://localhost:5000/images/person-circle.svg" alt="foto profil">
                  <% } else { %>
                    <img class="img-fluid img-circle img-lg" src='http://localhost:5000/uploads/<%= supervisor.avatar %>' alt="Foto profil">
                  <% } %>
                </div>
                
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/supervisor" class="btn btn-default mr-1">
                  Kembali
                </a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-sm">
                  Hapus
                </button>
                <!-- <button type="submit" class="btn btn-danger">Hapus</button> -->
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- modal-dialog -->
<div class="modal fade" id="modal-sm">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <p>Apakah anda yakin ingin menghapus data ini?</p>
      </div>
      <div class="modal-footer justify-end">
        <button type="button" class="btn btn-default" data-dismiss="modal">Tidak</button>
        <form action="/supervisor/delete/<%= supervisor.id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Ya</button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- /.modal-dialog -->

<%- include('../../partials/footer.ejs') %>
