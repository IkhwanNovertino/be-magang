<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Komponen Nilai</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/score">Komponen nilai</a></li>
            <li class="breadcrumb-item active">Ubah komponen nilai</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Bidang Kegiatan</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/score/edit/<%= score._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="title">Nilai</label>
                  <input type="text" class="form-control" 
                    name="title" id="title" 
                    placeholder="Isi bidang kegitan" 
                    value="<%= score.title %>"
                    required>
                </div>
                <div class="form-group">
                  <label>Kategori Nilai</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="T" name="category" value="T" <%= (score.category === 'T') ? 'checked' : '' %> >
                    <label for="T" class="form-check-label">Teknis</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="NT" name="category" value="NT" <%= (score.category === 'NT') ? 'checked' : '' %>>
                    <label for="NT" class="form-check-label">Non Teknis</label>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/score" class="btn btn-default mr-1">
                  Kembali
                </a>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>